<%- include('../../partials/header') %>

<div class="container-fluid">
    <div class="row">
        <%- include('../../partials/staffNavbar') %>

        <div class="col-md-10 p-4">
            <div class="container mt-4">
                <h1 class="mb-4">Thêm Thẻ Khách Hàng</h1>
                
                <!-- Form thêm thẻ khách hàng -->
                <form method="POST" action="/staff/customer-card/add">
                    <div class="mb-3">
                        <label for="NGAYLAP" class="form-label">Ngày Lập</label>
                        <input type="date" class="form-control" id="NGAYLAP" name="NGAYLAP" required>
                    </div>

                    <div class="mb-3">
                        <label for="NGAYHETHAN" class="form-label">Ngày Hết Hạn</label>
                        <input type="date" class="form-control" id="NGAYHETHAN" name="NGAYHETHAN" required>
                    </div>

                    <div class="mb-3">
                        <label for="DIEMTICHLUY" class="form-label">Điểm Tích Lũy</label>
                        <input type="number" class="form-control" id="DIEMTICHLUY" name="DIEMTICHLUY" value="0" min="0" required>
                    </div>

                    <div class="mb-3">
                        <label for="TRANGTHAI" class="form-label">Trạng Thái</label>
                        <select class="form-select" id="TRANGTHAI" name="TRANGTHAI" required>
                            <option value="" selected disabled>Trạng thái</option>
                            <option value="1">Hoạt động</option>
                            <option value="0">Đã khóa</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="LOAITHE" class="form-label">Loại Thẻ</label>
                        <select class="form-select" id="LOAITHE" name="LOAITHE" required>
                            <option value="" selected disabled>Loại thẻ</option>
                            <option value="Vàng">Vàng</option>
                            <option value="Bạc">Bạc</option>
                            <option value="Đồng">Đồng</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="NGAYDATHANG" class="form-label">Ngày Đặt Hàng</label>
                        <input type="date" class="form-control" id="NGAYDATHANG" name="NGAYDATHANG">
                    </div>

                    <div class="mb-3">
                        <label for="MAKHACHHANG" class="form-label">Mã Khách Hàng</label>
                        <input type="text" class="form-control" id="MAKHACHHANG" name="MAKHACHHANG" placeholder="Mã khách hàng" required>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">Lưu Thẻ</button>
                        <a href="/staff/customer-card/1" class="btn btn-secondary ms-2">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>
