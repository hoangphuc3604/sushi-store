<%- include('../../partials/header') %>

<div class="container-fluid">
    <div class="row">

        <%- include('../../partials/staffNavbar') %>

        <div class="col-md-10 p-4">
            <div class="container mt-4">
                <h1 class="mb-4">Quản Lý Phiếu Đặt Món</h1>
                
                <!-- Quản lý phiếu mua hàng -->
                <div class="mb-5">
                    <form class="row g-3" method="POST" action="/staff/orders/search">
                        <div class="col-md-2">
                            <label for="ngayLap" class="form-label">Ngày Lập</label>
                            <input type="date" class="form-control" id="ngayLap" name="ngayLap" value="<%= ngayLap ? ngayLap : '' %>" required>
                        </div>
                        <div class="col-md-3">
                            <label for="maNhanVien" class="form-label">Mã Nhân Viên</label>
                            <input type="text" class="form-control" id="maNhanVien" name="maNhanVien" value="<%= maNhanVien ? maNhanVien : '' %>" placeholder="Nhập mã nhân viên" required>
                        </div>
                        <div class="col-md-3">
                            <label for="maKhachHang" class="form-label">Mã Khách Hàng</label>
                            <input type="text" class="form-control" id="maKhachHang" name="maKhachHang" value="<%= maKhachHang ? maKhachHang : '' %>" placeholder="Nhập mã khách hàng">
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">Tìm Phiếu</button>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="button" class="btn btn-primary w-100" id="addBtn">Thêm Phiếu</button>
                        </div>
                    </form>
                    <div class="mt-4 table-responsive">
                        <table class="table table-bordered">
                            <thead class="">
                                <tr>
                                    <th>Mã Phiếu</th>
                                    <th>Ngày Lập</th>
                                    <th>Mã Nhân Viên</th>
                                    <th>Mã Khách Hàng</th>
                                    <th>Hành Động</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (orders.length > 0) { %>
                                    <% orders.forEach(order => { %>
                                        <tr>
                                            <td><%= order.maPhieu %></td>
                                            <td><%= order.ngayLap %></td>
                                            <td><%= order.maNhanVien %></td>
                                            <td><%= order.maKhachHang || 'N/A' %></td>
                                            <td>
                                                <a href="/staff/orders/edit/<%= order.maPhieu %>" class="btn btn-warning btn-sm">Sửa</a>
                                                <form method="POST" action="/staff/orders/delete/<%= order.maPhieu %>" style="display:inline;">
                                                    <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center">Không có phiếu mua hàng nào</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>             
        </div>
    </div>
</div>

<script>
    document.getElementById('addBtn').addEventListener('click', () => {
        const data = {
            ngayLap: document.getElementById('ngayLap').value,
            maNhanVien: document.getElementById('maNhanVien').value,
            maKhachHang: document.getElementById('maKhachHang').value
        };

        fetch('/staff/orders/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        })
    });
</script>

<%- include('../../partials/footer') %>


