<%- include('../../partials/header') %>

<div class="container-fluid">
  <div class="row">
    <%- include('../../partials/staffNavbar') %>

    <div class="col-md-12 p-4">
      <div class="container mt-4">
        <h2 class="text-center mb-4">Thống Kê Nhân Viên</h2>

        <form
          action="/staff/statistics/service"
          method="post"
          class="row g-3 align-items-center mb-4"
        >
          <div class="col-md-3">
            <label for="statType" class="form-label">Loại Thống Kê</label>
            <select class="form-select" id="statType" name="statType">
              <option value="day" selected>Theo Ngày</option>
              <option value="month">Theo Tháng</option>
              <option value="quarter">Theo Quý</option>
              <option value="year">Theo Năm</option>
            </select>
          </div>

          <div class="col-md-3">
            <label for="startDate" class="form-label">Ngày Bắt Đầu</label>
            <input
              type="date"
              id="startDate"
              name="startDate"
              class="form-control"
              value="<%= startDate %>"
            />
          </div>

          <div class="col-md-3">
            <label for="endDate" class="form-label">Ngày Kết Thúc</label>
            <input
              type="date"
              id="endDate"
              name="endDate"
              class="form-control"
              value="<%= endDate %>"
            />
          </div>

          <div class="col-md-2">
            <label class="form-label d-block">&nbsp;</label>
            <button type="submit" class="btn btn-primary w-100">
              Xem Thống Kê
            </button>
          </div>
        </form>

        <div class="table-responsive">
          <table class="table table table-bordered">
            <thead class="">
              <tr>
                <th>Mã Nhân Viên</th>
                <th>Tên Nhân Viên</th>
                <th>Điểm Phục Vụ</th>
                <th>Số Hóa Đơn</th>
                <th>Ghi Chú</th>
              </tr>
            </thead>
            <tbody>
              <% employeeStats.forEach(employee => { %>
              <tr>
                <td><%= employee.id %></td>
                <td><%= employee.name %></td>
                <td><%= employee.servicePoint %></td>
                <td><%= employee.billCount %></td>
                <td><%= employee.note %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/footer') %>
