<%- include('../partials/header') %>

<div class="container-fluid">
  <div class="row">
    <%- include('../partials/adminNavbar') %>

    <div class="col-md-10 p-4">
      <div class="container mt-4">
        <h2 class="mb-4 text-center">Chỉnh Sửa Thông Tin Thẻ Khách Hàng</h2>
        <form action="/admin/edit-customer-card/<%= customerCard.MATHE %>" method="POST">
          <div class="row g-3">
            <div class="col-md-6">
              <label for="MATHE" class="form-label">Mã Thẻ</label>
              <input type="text" id="MATHE" name="MATHE" class="form-control" value="<%= customerCard.MATHE %>" readonly />
            </div>

            <div class="col-md-6">
              <label for="NGAYLAP" class="form-label">Ngày Lập</label>
              <input type="date" id="NGAYLAP" name="NGAYLAP" class="form-control" value="<%= customerCard.NGAYLAP %>" />
            </div>

            <div class="col-md-6">
              <label for="NGAYHETHAN" class="form-label">Ngày Hết Hạn</label>
              <input type="date" id="NGAYHETHAN" name="NGAYHETHAN" class="form-control" value="<%= customerCard.NGAYHETHAN %>" />
            </div>

            <div class="col-md-6">
              <label for="DIEMTICHLUY" class="form-label">Điểm Tích Lũy</label>
              <input type="number" id="DIEMTICHLUY" name="DIEMTICHLUY" class="form-control" value="<%= customerCard.DIEMTICHLUY %>" />
            </div>

            <div class="col-md-6">
              <label for="TRANGTHAI" class="form-label">Trạng Thái</label>
              <select id="TRANGTHAI" name="TRANGTHAI" class="form-select">
                <option value="active" <%= customerCard.TRANGTHAI === 'active' ? 'selected' : '' %>>Hoạt Động</option>
                <option value="inactive" <%= customerCard.TRANGTHAI === 'inactive' ? 'selected' : '' %>>Không Hoạt Động</option>
              </select>
            </div>

            <div class="col-md-6">
              <label for="LOAITHE" class="form-label">Loại Thẻ</label>
              <select id="LOAITHE" name="LOAITHE" class="form-select">
                <option value="standard" <%= customerCard.LOAITHE === 'standard' ? 'selected' : '' %>>Thẻ Thường</option>
                <option value="premium" <%= customerCard.LOAITHE === 'premium' ? 'selected' : '' %>>Thẻ Cao Cấp</option>
              </select>
            </div>

            <div class="col-md-6">
              <label for="NGAYDATHANG" class="form-label">Ngày Đặt Hàng</label>
              <input type="date" id="NGAYDATHANG" name="NGAYDATHANG" class="form-control" value="<%= customerCard.NGAYDATHANG %>" />
            </div>

            <div class="col-md-6">
              <label for="MAKHACHHANG" class="form-label">Mã Khách Hàng</label>
              <input type="text" id="MAKHACHHANG" name="MAKHACHHANG" class="form-control" value="<%= customerCard.MAKHACHHANG %>" />
            </div>
          </div>

          <div class="mt-4 text-center">
            <button type="submit" class="btn btn-success">
              <i class="fas fa-save"></i> Lưu Thay Đổi
            </button>
            <a href="/admin/customer-card/1" class="btn btn-secondary">
              <i class="fas fa-arrow-left"></i> Quay Lại
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
